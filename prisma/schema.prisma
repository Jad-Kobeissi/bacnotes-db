generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}
enum Subject {
  ENGLISH
  ARABIC
  FRENCH
  MATH
  BIOLOGY
  PHYSICS
  CHEMISTRY
  GEOGRAPHY
  HISTORY
  CIVICS
  PHILOSOPHY
  ECONOMICS
}
model User {
  id        String   @id @default(cuid())
  username     String   @unique
  name      String?
  class String
  BACId Int
  posts Post[]
  viewedPosts Post[]   @relation("ViewedPosts")
  likedPosts Post[]   @relation("LikedPosts")
  followers User[] @relation("UserFollows")
  following User[] @relation("UserFollows")
  notes Note[] @relation("notes")
  likedNotes Note[] @relation("likedUsers")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String
  viewedUsers User[]   @relation("ViewedPosts")
  likedUsers User[]   @relation("LikedPosts")
  likes Int @default(0)
  imageUrls String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Note {
  id String @id @default(cuid())
  title String 
  content String
  imageUrls String[]
  subject Subject
  author User @relation(fields: [authorId], references: [id], "notes")
  authorId String
  likes Int @default(0)
  likedUsers User[] @relation("likedUsers")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model SISIdentifiers {
  id String @id @default(cuid())
  identifier String @unique
  password String
}